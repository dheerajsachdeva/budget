<h2> Add Payment </h2>

<h2 style='text-align: center; margin-top: 20px;'>Add Transaction</h2>
<div class="add_new_ingredient"  style='display: flex; justify-content: center; align-items: center;'>
  <%= form_with model: @payment, url: category_payments_path(params[:category_id]), method: :post, local: true do |form| %>
    <div class="form-group">
      <%= form.label :category_id, "Select Category" %>
      <%= form.select :category_id, current_user.categories.all.map { |category| [category.name, category.id] }, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :amount %>
      <%= form.number_field :amount, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit "Add", class: "btn btn-primary mt-4" %>
    </div>
  <% end %>
</div>

